<%= form_with(url: search_books_path, local: true, method: "get", class: 'd-flex') do %>
      <%= text_field_tag(:search_term, nil, class: 'form-control', placeholder: 'Search Book By Name') %>
      <%= select_tag(:category_id, options_for_select(@c),{ :include_blank => "select category"}) %>
      <%= submit_tag("Search", class: "btn btn-warning") %>
<% end %>